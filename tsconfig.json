{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@nft/*": ["src/projects/nft-preview-card/*"],
      "@testimonials/*": ["src/projects/testimonials-grid/*"],
      "@stats-card/*": ["src/projects/stats-card/*"],
      "@order-summary-card-component/*": ["src/projects/order-summary-card-component/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
